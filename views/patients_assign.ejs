<!DOCTYPE html>
<html lang="en">

<head>
    <!--Meta Tags-->
    <meta charset="UTF-8">
    <meta name="keywords" content="HTML, CSS">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">

    <!--Link to kit's Code for Icons-->
    <script src="https://kit.fontawesome.com/e56d36b0a0.js" crossorigin="anonymous"></script>

    <!--Title of Page-->
    <title>CovidConnect | Assign</title>

    <!--Favicon/icon in browser tab-->
    <link rel="icon" href="/img/favicon.png">

    <!--Link to CSS-->
    <link rel="stylesheet" href="/css/adminBackground.css">

</head>

<body>
    <!--Sidebar for Navigation-->
    <div class="sidebar">
        <a class="logoside" href="/adminIndex"><img class="logo" src="/img/logo.png" alt="logo"></a>
        <a class="active" href="/adminIndex"><i class="fab fa-canadian-maple-leaf"></i> Home</a>
        <a href="/approveRoles"><i class="fas fa-user-check"></i> Approve Roles</a>
        <button class="dropdown-btn"><i class="fas fa-folder"></i> Doctor-Patient
      <i class="fa fa-caret-down"></i>
    </button>
        <div class="dropdown-container">
            <a href="/patientsAssign">Assign Patients to Doctors</a>
            <a href="/doctorMonitor">Monitor Patient Assignment</a>
        </div>
        <div>
            <a href="/logout"><i class="fas fa-sign-out-alt"></i> Logout</a>
          </div>
    </div>

    <!-- javascript to make dropdown functional & easy to add more elements -->
    <script>
        var dropdown = document.getElementsByClassName("dropdown-btn");
        var i;

        for (i = 0; i < dropdown.length; i++) {
            dropdown[i].addEventListener("click", function() {
                this.classList.toggle("active");
                var dropdownContent = this.nextElementSibling;
                if (dropdownContent.style.display === "block") {
                    dropdownContent.style.display = "none";
                } else {
                    dropdownContent.style.display = "block";
                }
            });
        }
    </script>


    <div class="content">
        <h1 class="title"><i class="fas fa-clipboard-check"></i> Assign Patients to a Doctor</h1>
        <div class="form">
            <div class="col-md-12 doctors">
                <div class="col-md-6">
                    <h2>Patients</h2>

                </div>
                <table class="table table-striped patient-doctor-select-table" id="table1">
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">First Name</th>
                            <th scope="col">Last Name</th>
                            <th scope="col">Select a Doctor</th>
                            <th scope="col"></th>

                        </tr>
                    </thead>
                    <tbody>
                        <% for(let i=0; i<patients.length; i++){%>
                            <form action="/patientsAssign" method="POST">
                                <tr>
                                    <th scope="row">
                                        <%= i+1 %>
                                    </th>
                                    <td>
                                        <input class="readonly-inputs" name="fname" value="<%= patients[i].first_name %>" type="text" readonly>
                                    </td>
                                    <td>
                                        <input class="readonly-inputs" name="lname" value="<%= patients[i].last_name %>" type="text" readonly>
                                    </td>
                                    <td><select class="form-select form-select-doctor" aria-label="Default select example" name="doctor" required>
                                        <option value="" disabled="disabled" selected></option>
                                    <% for(let i=0; i<doctors.length; i++){%>
                                        <option value='<%=doctors[i].uuid %>' > <%= doctors[i].first_name%> <%= doctors[i].last_name%></option>
                                    <%} %> 
                                      
                                    </select>
                                    </td>
                                    <td style="text-align: right;">
                                        <input type="hidden" name="patient_uuid" value="<%= patients[i].uuid%>" readonly>
                                        <button type="submit" class="btn btn-info"><i class="fas fa-angle-double-right"></i></button>
                                    </td>
                                </tr>
                            </form>
                            <%} %>

                    </tbody>
                </table>
            </div>
            
        </div>

    </div>




    <!--Footer Bar-->
    <!--Footer-->
    <div class="footer">
        <div class="container-fluid">
            <div class="row">
                <div class="col-sm-3"><i class="fas fa-calendar-alt"></i> Stay Informed</div>
                <div class="col-sm-3"><i class="fas fa-phone"></i> (514) 123-456</div>
                <div class="col-sm-3"><i class="fas fa-envelope-square"></i> inquiries@covidconnect.ca</div>
                <div class="col-sm-3"><i class="fab fa-facebook"></i> @CovidConnect</div>
            </div>
        </div>
    </div>


    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://cdn.datatables.net/1.10.12/css/jquery.dataTables.min.css">
    <script type="text/javascript" src="https://cdn.datatables.net/1.10.12/js/jquery.dataTables.min.js"></script>

    <script type="text/javascript">
      $(document).ready(function(){
        $("#table1").DataTable();
      })
    
    </script>

</body>

</html>