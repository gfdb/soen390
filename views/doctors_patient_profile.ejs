<!DOCTYPE html>
<html lang="en">

<head>
    <!--Meta Tags-->
    <meta charset="UTF-8">
    <meta name="keywords" content="HTML, CSS">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">

    <!--Link to kit's Code for Icons-->
    <script src="https://kit.fontawesome.com/e56d36b0a0.js" crossorigin="anonymous"></script>

    <!--Title of Page-->
    <title>CovidConnect | Patient Profile</title>

    <!--Favicon/icon in browser tab-->
    <link rel="icon" href="/img/favicon.png">

    <!--Link to CSS-->
    <link rel="stylesheet" href="/css/profile.css">
    <link rel="stylesheet" href="/css/adminBackground.css">


</head>

<body>
    <!--Sidebar for Navigation-->
    <div class="sidebar">
        <a class="logoside" href=""><img class="logo" src="/img/logo.png" alt="logo"></a>
        <a class="active" href=""><i class="fab fa-canadian-maple-leaf"></i> Home</a>
        <a href="/doctorsPatientList"><i class="fas fa-hospital-user"></i> My patients</a>
        <div>
            <a href="/logout"><i class="fas fa-sign-out-alt"></i> Logout</a>
          </div>
     
      </div>



    <div class="content">
        <h1 class="title"><i class="fas fa-address-card"></i> Patient Profile</h1>

        <div class="form">
            <%
            if(patientinfo) {
            %>
            <div class=" gap-2 mx-auto" style="text-align: center;">
            

                <form action="/changeCovidStatus" method="POST" style="display: inline;">
                    <input type="hidden" name="uuid" value="<%=patientinfo.uuid %>">
                    <input type="hidden" name="covid" value="<%=patientinfo.covid %>">
                   
                    <button type="submit" class="btn-style btn btn-info" data-bs-toggle="button" style="height: auto; width:600px;">Change Patient's Covid status</button>
                </form>
                
                <form action="/notifyExposure" method="POST" style="display: inline;">
                    <input type="hidden" name="uuid" value="<%=patientinfo.uuid %>">
                    
                   
                    <button type="submit" class="btn-style btn btn-danger" data-bs-toggle="button" style="height: auto; width: 600px;">Inform Patient of Possible Covid Exposure</button>
                </form>

                
                   
                <a href = "/doctorMessaging/<%=patientinfo.uuid %>" type="submit" class="btn-style btn btn-info" data-bs-toggle="button" style="color: white; height: auto; width:600px;">Message this Patient</a>
                
            
            </div>
            <!--            
            <h5>
                <div class="editing"><a href="profile/edit"><i class="fas fa-marker"></i> Edit profile</a></div>
            </h5>-->

            <form class="row g-3">
               
                <div class="col-md-6">
                    <label for="inputEmail4" class="form-label"><b>First Name</b></label>
                    
                    <p><%=patientinfo.first_name %></p>
                </div>
                <div class="col-md-6">
                    <label for="inputEmail4" class="form-label"><b>Last Name</b></label>
                    
                    <p><%=patientinfo.last_name %></p>
                </div>

                <div class="col-md-6">
                    <label for="inputEmail4" class="form-label"><b>Email</b></label>
                   
                    <p><%=patientinfo.email %></p>
                </div>
                <div class="col-12">
                    <label for="inputAddress" class="form-label"><b>Address</b></label>
                   
                    <p><%=patientinfo.street_name %></p>
                </div>
                <div class="col-12">
                    <label for="inputAddress2" class="form-label"><b>Address 2</b></label>
                    
                    <p>appt. <%=patientinfo.apartment_number %></p>
                </div>
                <div class="col-md-6">
                    <label for="inputCity" class="form-label"><b>City</b></label>
                  
                    <p><%=patientinfo.city %></p>
                </div>

                <div class="col-md-4">
                    <label for="inputState" class="form-label"> <b>Province/Territory</b></label>
                    <p><%=patientinfo.province %></p>
                </div>
                <div class="col-md-2">
                    <label for="inputZip" class="form-label"><b>Zip</b></label>
                   
                    <p><%=patientinfo.zipcode %></p>
                </div>
                <div class="covid">
                    <center>
                        <div class="col-md-12">
                            <label for="inputEmail4" class="form-label"><b>Covid Status</b></label>
                            
                             <%
                            if(patientinfo.covid==1){
                            
                                                 
                            %>
                           
                            <p style="background-color: red; color: white;" class="covid">POSITIVE</p>
                            <% } else if (patientinfo.covid==0) { %>
                            <p style="background-color: rgb(0, 255, 42); color: white;" class="covid">NEGATIVE</p>
                            <% } %>
                        </div>
                        <div class="col-md-12 covid" style="background-color: beige;">
                            <label for="inputEmail4" class="form-label"><b>Symptoms</b></label>
                            
                            <p>- Fever of 38 degrees<br>- Persistent cough<br>- Sore throat<br>- Loss of apetite</p>
                        </div>
                    </center>
                </div>
                <% } else{ %>
                              <tr>
                                  <td colspan="7">Patient Not Found</td>
                              </tr>
                <% } %>
               
            </form>



        </div>

    </div>


    <!--Footer Bar-->
    <!--Footer-->
    <div class="footer">
        <div class="container-fluid">
            <div class="row">
                <div class="col-sm-3"><i class="fas fa-calendar-alt"></i> Stay Informed</div>
                <div class="col-sm-3"><i class="fas fa-phone"></i> (514) 123-456</div>
                <div class="col-sm-3"><i class="fas fa-envelope-square"></i> inquiries@covidconnect.ca</div>
                <div class="col-sm-3"><i class="fab fa-facebook"></i> @CovidConnect</div>
            </div>
        </div>
    </div>


    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>


</body>

</html>