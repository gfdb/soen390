    <!--Favicon/icon in browser tab-->
    <link rel="icon" href="/img/favicon.png">

    <!--Link to CSS-->
    <link rel="stylesheet" href="/css/background.css">

</head>

<body>
    <!--Heading-->
    <div class="header" style="margin-bottom:0">
        <a class="navbar-brand" href="/"><img class="logo" src="/img/logo.png" alt="logo"></a>
    </div>

    <!--Navigation Bar-->
    <nav class="navbar navbar-expand-md bg-dark navbar-dark sticky-top">
        <!-- Brand -->
        <a class="navbar-brand" href="/"><i class="fab fa-canadian-maple-leaf"></i>CovidConnect</a>

        <!-- Toggler/collapsibe Button -->
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#collapsibleNavbar">
      <span class="navbar-toggler-icon"></span>
    </button>

        <!-- Navbar links -->
        <div class="collapse navbar-collapse" id="collapsibleNavbar">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" href="/profile"><i class="fas fa-address-card"></i> Profile</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/patientMessaging"><i class="fas fa-stethoscope"></i> Contact Your Doctor</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="locations"><i class="fas fa-location-arrow"></i> Tracking</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/symptoms"><i class="fas fa-bacterium"></i> Symptoms</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/patientAppointment"><i class="fas fa-calendar-check"></i> Appointments</a>
                </li>
            </ul>

            <ul class="navbar-nav ml-auto">
                <li>
                    <a class="nav-link" href="/signup"><i class="fas fa-user-plus"></i> Sign up</a>
                </li>


                <!-- Dropdown -->


                <li class="nav-item dropdown">
                    <div class="dropdown-menu dropdown-menu-right">
                        <a class="dropdown-item" href="/login">Login</a>
                    </div>

                    <a class="nav-link dropdown-toggle" href="#" id="navbardrop" data-toggle="dropdown"><i class = "fas fa-user"></i></a>

                </li>


            </ul>
        </div>

    </nav>



    <div class="content">
        <h1 class="title"><i class="fas fa-user-plus"></i> Sign Up</h1>

        <div class="form">
            <%if(locals.error){%>
                <p style="color: red; text-align: center;">
                    <%=error%>
                </p>
                <%}%>

                    <form class="row g-3" action="/signup" method="POST">

                        <div class="col-md-6">
                            <label for="inputEmail4" class="form-label">First Name</label>
                            <input type="text" class="form-control" placeholder="First name" aria-label="First name" name="name" required>
                        </div>
                        <div class="col-md-6">
                            <label for="inputEmail4" class="form-label">Last Name</label>
                            <input type="text" class="form-control" placeholder="Last name" aria-label="Last name" name="lastName" required>
                        </div>

                        <div class="col-md-6">
                            <label for="inputEmail4" class="form-label">Email</label>
                            <input type="email" class="form-control" id="inputEmail4" placeholder="@example.com" name="email" required>
                        </div>
                        <div class="col-md-6">
                            <label for="inputPassword4" class="form-label">Password</label>
                            <input type="password" class="form-control" id="inputPassword4" name="password">
                        </div>
                        <div class="col-12">
                            <label for="inputAddress" class="form-label">Address</label>
                            <input type="text" class="form-control" id="inputAddress" placeholder="1234 Main St" name="address" required>
                        </div>
                        <div class="col-12">
                            <label for="inputAddress2" class="form-label">Address 2</label>
                            <input type="text" class="form-control" id="inputAddress2" placeholder="Apartment, studio, or floor" name="address2" required>
                        </div>
                        <div class="col-md-6">
                            <label for="inputCity" class="form-label">City</label>
                            <input type="text" class="form-control" id="inputCity" name="city">
                        </div>
                        <div class="col-md-4">
                            <label for="inputState" class="form-label">Province/Territory</label>
                            <select class="form-select" aria-label="Default select example" name="province" required>
                                <option value="" disabled="disabled" selected>----</option>            
                                <option value="AB">Alberta</option>
                                <option value="BC">British Columbia</option>
                                <option value="MB">Manitoba</option>
                                <option value="NB">New Brunswick</option>
                                <option value="NL">Newfoundland and Labrador</option>
                                <option value="NT">Northwest Territories</option>
                                <option value="NS">Nova Scotia</option>
                                <option value="NU">Nunavut</option>
                                <option value="ON">Ontario</option>
                                <option value="PE">Prince Edward Island</option>
                                <option value="QC">Quebec</option>
                                <option value="3">Saskatchewan</option>
                                <option value="YT">Yukon</option>
                            </select>
                        </div>

                        <div class="col-md-2">
                            <label for="inputZip" class="form-label">Zip</label>
                            <input type="text" class="form-control" id="inputZip" placeholder="X1X 1X1" name="zip" required>
                        </div>

                        <div class="col-md-4">
                            <label for="inputState" class="form-label">Type of User</label>
                            <select class="form-select" aria-label="Default select example" name="permissionLevel" required>
                        <option value="" disabled="disabled" selected>----</option>
                        <option value="patient">Patient</option>
                        <!-- <option value="worker">Worker</option> -->
                        <option value="doctor">Doctor</option>
                        <!-- <option value="admin">Admin</option> -->
                        <option value="health official">Health Official</option>
                        <option value="nurse">Nurse</option>
                        <option value="immigration officer">Immigration Officer</option>
                    </select>
                        </div>
                        <!-- <div class="col-md-4">
                    <input style="display: none;" type="text" class="form-control" id="permissionLevel" name="permissionLevel" value="patient">
                </div> -->
                        <div class="col-12 submitbtn">
                            <button type="submit" class="btn btn-outline-danger btn-lg">Sign Up</button>

                        </div>
                    </form>



        </div>

    </div>


    <!--Footer Bar-->
    <!--Footer-->
    <div class="footer">
        <div class="container-fluid">
            <div class="row">
                <div class="col-sm-3"><i class="fas fa-calendar-alt"></i> Stay Informed</div>
                <div class="col-sm-3"><i class="fas fa-phone"></i> (514) 123-456</div>
                <div class="col-sm-3"><i class="fas fa-envelope-square"></i> inquiries@covidconnect.ca</div>
                <div class="col-sm-3"><i class="fab fa-facebook"></i> @CovidConnect</div>
            </div>
        </div>
    </div>


    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
