    <!--Title of Page-->
    <title>CovidConnect | Login</title>

    <!--Favicon/icon in browser tab-->
    <link rel="icon" href="/img/favicon.png">

    <!--Link to CSS-->
    <link rel="stylesheet" href="/css/background.css">

</head>

<body>
    <!--Heading-->
    <div class="header" style="margin-bottom:0">
        <a class="navbar-brand" href="/"><img class="logo" src="/img/logo.png" alt="logo"></a>
    </div>

    <!--Navigation Bar-->
    <nav class="navbar navbar-expand-md bg-dark navbar-dark sticky-top">
        <!-- Brand -->
        <a class="navbar-brand" href="/"><i class="fab fa-canadian-maple-leaf"></i>CovidConnect</a>

        <!-- Toggler/collapsibe Button -->
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#collapsibleNavbar">
      <span class="navbar-toggler-icon"></span>
    </button>

        <!-- Navbar links -->
        <div class="collapse navbar-collapse" id="collapsibleNavbar">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" href="/profile"><i class="fas fa-address-card"></i> Profile</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/patientMessaging"><i class="fas fa-stethoscope"></i> Contact Your Doctor</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="locations.html"><i class="fas fa-location-arrow"></i> Tracking</a>
                </li>
            </ul>

            <ul class="navbar-nav ml-auto">
                <li>
                    <a class="nav-link" href="/signup"><i class="fas fa-user-plus"></i> Sign up</a>
                </li>


                <!-- Dropdown -->


                <li class="nav-item dropdown">
                    <div class="dropdown-menu dropdown-menu-right">
                        <a class="dropdown-item" href="/login">Login</a>
                    </div>

                    <a class="nav-link dropdown-toggle" href="#" id="navbardrop" data-toggle="dropdown"><i class = "fas fa-user"></i></a>

                </li>


            </ul>
        </div>

    </nav>



    <div class="content">
        <h1 class="title"><i class="fas fa-sign-in-alt"></i> Login</h1>

        <div class="form">

            <form action="/login" method="POST">
                <div style="padding-top: 60px; padding-left: 25%; padding-right: 25%;">
                    <label for="email" class="form-label">Email address</label>
                    <%if(error){%>
                        <p style="color: red;">
                            <%=error%>
                        </p>
                        <%}%>
                            <div class="input-group mb-3">

                                <span class="input-group-text" id="basic-addon1">@</span>
                                <input type="email" id='email' class="form-control" aria-label="email" aria-describedby="basic-addon1" placeholder="name@example.com" name="email" required>
                            </div>
                </div>
                <div class="mb-3" style="padding-top: 40px; padding-left: 25%; padding-right: 25%;">
                    <label for="password" class="form-label">Password</label>
                    <input type="password" class="form-control" id="password" name="password" required>
                </div>
                <p style="text-align: center;">Don't have an account? <a href="/signup" style="color: #0066CC;">Sign up today!</a></p>

                <div class="col-12 submitbtn" style="padding-top: 80px; padding-bottom: 80px;">
                    <button type="submit" class="btn btn-outline-danger btn-lg">Sign In</button>
                </div>
            </form>


        </div>
    </div>



    <!--Footer Bar-->
    <!--Footer-->
    <div class="footer">
        <div class="container-fluid">
            <div class="row">
                <div class="col-sm-3"><i class="fas fa-calendar-alt"></i> Stay Informed</div>
                <div class="col-sm-3"><i class="fas fa-phone"></i> (514) 123-456</div>
                <div class="col-sm-3"><i class="fas fa-envelope-square"></i> inquiries@covidconnect.ca</div>
                <div class="col-sm-3"><i class="fab fa-facebook"></i> @CovidConnect</div>
            </div>
        </div>
    </div>


    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>


</body>

</html>