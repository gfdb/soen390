                        </tr>
                    </thead>
                    <tbody>
                        <%
                            if(allpatients.length!=0){
                              var i=1;
                            allpatients.forEach(function(data){                     
                            %>
                            <tr>
                                <th scope="row">
                                    <%=i; %>
                                </th>
                                <td>
                                    <%=data.first_name %>
                                </td>
                                <td>
                                    <%=data.last_name %>
                                </td>


                                <% if(data.covid == 1){%>
                                    <td>POSITIVE</td>
                                    <%} else {%>
                                        <td>NEGATIVE</td>
                                        <%}%>
                                            <td>
                                                <%=data.criticality %>
                                            </td>
                                            <td style="text-align: right;">


                                                <a href="/doctorsPatientProfile/<%= data.uuid %> " type="submit" class="btn btn-info"><i class="fas fa-angle-double-right"></i></a>


                                            </td>

                            </tr>
                            <%  i++; }) %>
                                <% } else{ %>
                                    <tr>
